<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".UpgradeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logoIMG"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/cardview_bg"
                android:src="@drawable/achivement_water_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pro Upgrade"
                android:textColor="@color/White"
                android:textSize="@dimen/_17sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/opensans_bold"
                app:layout_constraintLeft_toRightOf="@+id/logoIMG"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                android:id="@+id/closeUpgrade"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/close"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/amount"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@drawable/upgrade__circle_bg"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_12sdp">
           <ImageView
               android:layout_width="@dimen/_54sdp"
               android:layout_height="@dimen/_104sdp"
               android:src="@drawable/water_glass"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginLeft="@dimen/_20sdp"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginStart="@dimen/_20sdp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/_60sdp"
            app:layout_constraintBottom_toTopOf="@+id/premiumBTN">
            <ImageView
                android:id="@+id/rupeeIMG"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:src="@drawable/indianrupeesymbol"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="@dimen/_28sdp"
                android:text="180.00"
                app:layout_constraintLeft_toRightOf="@+id/rupeeIMG"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/premiumBTN"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:theme="@style/Theme.MaterialComponents"
            android:gravity="center"
            android:textAllCaps="true"
            app:backgroundTint="#EBFA951A"
            app:icon="@drawable/crown"
            android:fontFamily="@font/opensans_bold"
            android:text="Upgrade"
            android:textSize="@dimen/_13sdp"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_10sdp"
            app:iconTint="@color/Gold"
            android:textColor="@color/White"
            app:cornerRadius="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
