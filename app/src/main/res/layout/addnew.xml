<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColour"
    android:layout_margin="@dimen/_16sdp"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addnewrv"
        android:layout_width="match_parent"
        android:background="@color/backgroundColour"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:background="@color/backgroundColour"
        android:layout_marginRight="@dimen/_16sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/water_glass_st"
            app:tint="@color/SteelBlue" />

        <EditText
            android:id="@+id/addnewcups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:hint="@string/add_new_cups"
            android:inputType="number"
            android:maxLength="3"
            android:textColorHint="@color/textColour"

            android:textColor="@color/textColour" />

        <ImageButton
            android:id="@+id/addnewcupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@android:color/transparent"
            android:src="@drawable/check"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>